{
    "name": "gustcavalcante/buscador-cursos",
    "description": "Procura todos os cursos da Alura - projeto do Curso PHP Alura",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Alura\\BuscadorDeCursos\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Gustavo Cavalcante Andrade Oliveira"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.10",
        "symfony/dom-crawler": "^7.4",
        "symfony/css-selector": "^7.4"

    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "squizlabs/php_codesniffer": "*",
        "phan/phan": "^6.0"
    },
    "scripts": {
        "test": "phpunit tests//TestBuscadorDeCursos.php",
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs"
        ],
        "post-update-cmd": [
            "@test"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda verificacoes"
    }
}
